<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VacationDetailsActivity">

    <!-- Vacation Title Input -->
    <EditText
        android:id="@+id/vacation_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Vacation Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Hotel Name Input -->
    <EditText
        android:id="@+id/vacation_hotel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hotel Name"
        app:layout_constraintTop_toBottomOf="@id/vacation_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Start Date Input -->
    <EditText
        android:id="@+id/vacation_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Start Date (MM/dd/yy)"
        app:layout_constraintTop_toBottomOf="@id/vacation_hotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- End Date Input -->
    <EditText
        android:id="@+id/vacation_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="End Date (MM/dd/yy)"
        app:layout_constraintTop_toBottomOf="@id/vacation_start_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/vacation_end_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Share Button -->
    <Button
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        app:layout_constraintTop_toBottomOf="@id/vacation_end_date"
        app:layout_constraintStart_toEndOf="@id/button_save"
        android:layout_margin="16dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintTop_toBottomOf="@id/button_save"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- RecyclerView for Excursions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/excursion_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_add_excursion"
        android:layout_margin="16dp" />

    <!-- Add Excursion Button -->
    <Button
        android:id="@+id/button_add_excursion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Excursion"
        app:layout_constraintTop_toBottomOf="@id/excursion_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
